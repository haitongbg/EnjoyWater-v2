<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_47"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_tab_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_5"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_tab_home" />


            <TextView
                android:fontFamily="@font/opensans_semibold"
                android:id="@+id/tv_tab_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_home"
                android:gravity="center"
                android:text="@string/tab_home"
                android:textColor="@color/black_b1"
                android:textSize="@dimen/text_12" />

            <View
                android:id="@+id/underline_tab_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2_5"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black_f1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_product"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tab_product_active" />

            <TextView
                android:fontFamily="@font/opensans_semibold"
                android:id="@+id/tv_tab_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_product"
                android:gravity="center"
                android:text="@string/tab_product"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <View
                android:id="@+id/underline_tab_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2_5"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_orders"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tab_orders" />

            <TextView
                android:fontFamily="@font/opensans_semibold"
                android:id="@+id/tv_tab_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_orders"
                android:gravity="center"
                android:text="@string/tab_orders"
                android:textColor="@color/black_b1"
                android:textSize="@dimen/text_12" />

            <View
                android:id="@+id/underline_tab_orders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2_5"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_notif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_notif"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tab_notif" />

            <TextView
                android:fontFamily="@font/opensans_semibold"
                android:id="@+id/tv_tab_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_notif"
                android:gravity="center"
                android:text="@string/tab_notif"
                android:textColor="@color/black_b1"
                android:textSize="@dimen/text_12" />

            <View
                android:id="@+id/underline_tab_notif"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2_5"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_personal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_18"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tab_personal" />

            <TextView
                android:fontFamily="@font/opensans_semibold"
                android:id="@+id/tv_tab_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_personal"
                android:gravity="center"
                android:text="@string/tab_personal"
                android:textColor="@color/black_b1"
                android:textSize="@dimen/text_12" />

            <View
                android:id="@+id/underline_tab_personal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2_5"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>