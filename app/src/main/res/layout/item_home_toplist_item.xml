<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="@dimen/size_165"
    android:layout_height="@dimen/size_115"
    android:layout_marginRight="@dimen/size_7"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_img_topsale" />

        <ImageView
            android:id="@+id/iv_hot_sale"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_hot_sale" />
    </RelativeLayout>

</android.support.v7.widget.CardView>