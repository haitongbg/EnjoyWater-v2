<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="false">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:background="@color/colorPrimary"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/size_65"
                android:layout_height="@dimen/size_65"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/size_15"
                android:background="@drawable/bg_white_circle"
                android:clickable="true"
                android:padding="@dimen/size_5"
                android:src="@drawable/ic_logo" />

            <View
                android:id="@+id/v_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <com.enjoywater.view.TvSegoeuiSemiBold
                android:id="@+id/tv_wellcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_avatar"
                android:includeFontPadding="false"
                android:text="@string/wellcome"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

            <com.enjoywater.view.TvSegoeuiSemiBold
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/v_center"
                android:layout_toRightOf="@id/iv_avatar"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_promote_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_center"
                android:layout_toRightOf="@id/iv_avatar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.enjoywater.view.TvSegoeuiRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promote_point"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />

                <com.enjoywater.view.TvSegoeuiBold
                    android:id="@+id/tv_promote_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="0 điểm"
                    android:textColor="@color/white" />
            </LinearLayout>


        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>

