<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="@dimen/size_120"
    android:layout_height="@dimen/size_200"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_130"
        android:layout_marginTop="@dimen/size_20"
        android:scaleType="centerInside"
        android:src="@drawable/test_img_product" />

    <com.enjoywater.view.TvSegoeuiBold
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_7"
        android:layout_marginTop="@dimen/size_7"
        android:layout_marginRight="@dimen/size_7"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="Lavie 50.000Ä‘"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12" />

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/size_10"
        android:layout_height="@dimen/size_10"
        android:layout_marginTop="@dimen/size_7"
        android:scaleType="centerInside"
        android:src="@drawable/ic_radio_button_active" />
</LinearLayout>